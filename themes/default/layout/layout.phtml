{{% BLOCKS }}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="/concat/app.css" rel="stylesheet" type="text/css"/>
        <title>{{$title}}Certigate Pro{{/title}}</title>
        <!-- Additional styles to be added to specific views -->
        {{$styles}}{{/styles}}
    </head>

    <body>
        {{$header}}
        <nav class="navbar navbar-inverse navbar-fixed-top">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="/">Certigate Pro</a>
                </div>
                <ul class="nav navbar-nav navbar-right">
                    <li role="presentation" class="dropdown">
                        <a type="button" class="dropdown-toggle" data-toggle="dropdown" href="#" role="button">
                            <span class="glyphicon glyphicon-flag" aria-hidden="true"></span> <span class="caret"></span>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/trans/setlocale/en_US">{{#translate}}English{{/translate}}</a></li>
                            <li><a href="/trans/setlocale/ar_AR">{{#translate}}Arabic{{/translate}}</a></li>
                        </ul>
                    </li>
                    {{^loggedInUsername}}
                    <li><a href="/sign/in"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
                    {{/loggedInUsername}}
                    {{#loggedInUsername}}
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> {{loggedInUsername}}</a></li>
                    <li><a href="/sign/out"><span class="glyphicon glyphicon-log-out"></span> Log out</a></li>
                    {{/loggedInUsername}}
                </ul>
            </div>
        </div>
    </nav>
    {{/header}}

    <div class="container-fluid">
        <div class="row">
            {{$menus}}
            <div class="col-sm-3 col-md-2 sidebar no-padding">
                {{<primary_menu}}
                {{/primary_menu}}

                {{#adminMenu}}
                <h4>Admin Menu</h4>
                {{{adminMenu}}}
                {{/adminMenu}}
            </div>
            {{/menus}}
            <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
                <div id="page-wrapper">

                    <!-- /.row -->
                    <div class="row">
                        <div class="col-lg-12">
                            {{>messages}}
                            {{$content}}{{/content}}  
                        </div>
                        <!-- /.col-lg-12 -->
                    </div>
                    <!-- /.row -->
                </div>
                <!-- /#page-wrapper -->
            </div>
        </div>
    </div>

    <script src="/concat/app.js" type="text/javascript"></script>
    <!-- Additional scripts to be added to specific views -->
    {{$scripts}}{{/scripts}}
</body>
</html>
