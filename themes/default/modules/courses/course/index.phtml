{{% BLOCKS }}
{{<layout}}
{{$content}}
<a href="/courses/new"><button class="btn btn-small btn-success">Create new Course</button></a>
<br><br>
<div class="panel panel-default">

    <div class="panel-heading">Courses</div>

    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Status</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#courses}}
            <tr class="{{^status}}container-inactive{{/status}}">
                <td>{{name}}</td>
                <td>{{statusText}}</td>

                <td>
                    <a href="/resources/{{id}}" data-toggle="tooltip" data-placement="left" title="Resources"><span class="glyphicon glyphicon-folder-close"></span></a>
                    {{#evaluation}}
                    &nbsp;&nbsp;&nbsp;
                    <a href="/courses/evaluation/edit/{{evaluation.course.id}}" data-toggle="tooltip" data-placement="left" title="Edit Course Evaluation"><span class="glyphicon glyphicon-list-alt"></span></a>
                    {{/evaluation}}
                    {{^evaluation}}
                    &nbsp;&nbsp;&nbsp;
                    <a href="/courses/evaluation/new/{{id}}" data-toggle="tooltip" data-placement="left" title="Create Course Evaluation"><span class="glyphicon glyphicon-list-alt"></span></a>
                    {{/evaluation}}
                    &nbsp;&nbsp;&nbsp;
                    <a href="/course-events/{{id}}" data-toggle="tooltip" data-placement="left" title="Course Events"><span class="glyphicon glyphicon-calendar"></span></a>
                    &nbsp;&nbsp;&nbsp;
                    <a href="/courses/edit/{{id}}" data-toggle="tooltip" data-placement="left" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                    {{#status}}
                    {{#isAdminUser}}
                    &nbsp;&nbsp;&nbsp;
                    <a href="/courses/delete/{{id}}" data-toggle="tooltip" data-placement="left" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
                    {{/isAdminUser}}
                    {{/status}}

                </td>
            </tr>
            {{/courses}}
            </td>
            </tr>
        </tbody>
    </table>
</div>
{{/content}}
{{/layout}}
