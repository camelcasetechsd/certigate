{{% BLOCKS }}
{{<layout}}
{{$content}}
<br>

{{^messages}}
<div class="panel panel-default">
    <div class="panel-heading"><h3>{{#translation}}My Courses{{#translation}}</h3></div>
    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>{{#translation}}Course name{{#translation}}</th>
                <th>{{#translation}}Start Date{{#translation}}</th>
                <th>{{#translation}}End Date{{#translation}}</th>
                <th colspan="2">{{#translation}}View Details{{#translation}}</th>
            </tr>
        </thead>
        <tbody>
            {{#courseEvents}}
            <tr>
                <td>{{name}}</td>
                <td>{{startDate}}</td>
                <td>{{endDate}}</td>
                <td>
                    <a href="/courses/more/{{course_id}}/{{id}}">{{#translation}}View More{{#translation}}..</a>
                </td>
            </tr>
            {{/courseEvents}}
            </td>
            </tr>
        </tbody>
    </table>
</div>
{{/messages}}

{{#hasPages}}
<div class="pagination-bar">
    <p > Pages :  </p>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <ul class="pagination">
        {{#previousPageNumber}}
        <li >
            <a href="?page={{previousPageNumber}}{{#filterQuery}}&{{filterQuery}}{{/filterQuery}}"><span class="glyphicon glyphicon-menu-left"></span></a>
        </li>
        {{/previousPageNumber}}
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        {{#pageNumbers}}
        <li {{#isCurrent}}class="active"{{/isCurrent}} >
            <a href="?page={{pageNumber}}{{#filterQuery}}&{{filterQuery}}{{/filterQuery}}">{{pageNumber}}</a>
        </li>
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        {{/pageNumbers}}
        {{#nextPageNumber}}
        <li >
            <a href="?page={{nextPageNumber}}{{#filterQuery}}&{{filterQuery}}{{/filterQuery}}"><span class="glyphicon glyphicon-menu-right"></span></a>
        </li>
        {{/nextPageNumber}}
    </ul>
</div>
<br>
{{/hasPages}}

{{/content}}
{{/layout}}
