{{% BLOCKS }}
{{<layout}}
{{$content}}
<a href="/courses/calendar"><button class="btn btn-small btn-success"><span class="glyphicon glyphicon-arrow-left"></span></button></a>
<br><br>

<br><br>
<!--make sure that user did not evaluated the course before-->
{{#notEvaluatedBefore}}
<!--making sure that course has evaluation-->
{{#hasEvaluation}}
<!--making sure that user is student-->
{{#isStudent}}
<!--this rule is only for students-->
<a class="btn btn-info" href="/courses/vote/{{course.id}}" >Evaluate Course</a>
<br><br>
{{/isStudent}}
{{/hasEvaluation}}
{{/notEvaluatedBefore}}

<div class="panel panel-default">

    <div class="panel-heading">Course Info</div>

    <!-- Table -->

    {{#course}}
    <table class="table">
        <tbody>
            <tr>
                <td>Name</td><td>{{name}}</td>
            </tr><tr>
                <td>Brief</td><td>{{brief}}</td>
            </tr><tr>
                <td>Authorized Instructor</td><td>{{ai.firstName}} {{ai.lastName}}</td>
            </tr><tr>
                <td>Start Date</td><td>{{startDate}}</td>
            </tr><tr>
                <td>End Date</td><td>{{endDate}}</td>
            </tr><tr>
                <td>Time</td><td>{{time}}</td>
            </tr><tr>
                <td>Duration</td><td>{{duration}} Day(s)</td>
            </tr><tr>
                <td>Authorized Training Partner</td><td>{{atp.commercialName}}</td>
            </tr>

            {{#outlines.count}}
            <td>Outlines</td><td></td>
            <tr>
                <td>&ensp; Title</td>
                <td>Duration (minutes)</td>
            </tr>
            {{/outlines.count}}
            {{#outlines}}
                {{#statusActive}}
                <tr>
                    <td>&ensp; {{title}}</td>
                    <td>{{duration}}</td>
                </tr>
                {{/statusActive}}
            {{/outlines}} 

        {{#canDownloadResources}}

        {{#resources}}
        <td>Resources</td><td></td>
        {{/resources}}
        {{#resources}}
        <tr>
            <td>&ensp; {{type}}</td>
            <td>
                {{#files}}
                <a target="_blank" href="/resources/download/{{id}}" >{{name}}</a> <br>
                {{/files}}
            </td>
        </tr>
        {{/resources}} 
        {{/canDownloadResources}}
        </tbody>
    </table>
    {{/course}}

</div>
{{/content}}
{{/layout}}
