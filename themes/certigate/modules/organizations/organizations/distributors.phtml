{{% BLOCKS }}
{{<layout}}
{{$content}}
<br />
<a href="/organizations/new/{{distributorsTypeId}}"><button class="btn btn-small btn-success create-new">Create new Distributors</button></a>
<br/><br/>
<div class="panel panel-default atps-list">
    <div class="panel-heading">Distributors</div>

    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Commercial Name</th>
                <th>City</th>
                <th>Phone</th>
                <th>WebSite</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#distributors}}
            <tr>
                <td>{{commercialName}}</td>
                <td>{{city}}</td>
                <td>{{phone1}}</td>
                <td>{{website}}</td>
                <td>
                    <a href="/organizations/more/{{id}}" title="More">More</a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    {{#orgUser}}
                    <a href="/organizations/pending/{{id}}" data-toggle="tooltip" data-placement="left" title="View"><span class="glyphicon glyphicon-eye-open"></span></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a data-toggle="tooltip" data-placement="left" title="Edit" href="/organizations/edit/{{id}}"><span class="glyphicon glyphicon-edit"></span></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    {{#status}}
                    <a data-toggle="tooltip" data-placement="left" title="Delete" href="/organizations/delete/{{id}}"><span class="glyphicon glyphicon-remove"></span></a>
                    {{/status}}
                    {{/orgUser}}
                    {{^orgUser}}
                    {{#isAdmin}}
                    <a href="/organizations/pending/{{id}}" data-toggle="tooltip" data-placement="left" title="View"><span class="glyphicon glyphicon-eye-open"></span></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <a data-toggle="tooltip" data-placement="left" title="Edit" href="/organizations/edit/{{id}}"><span class="glyphicon glyphicon-edit"></span></a>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    {{#status}}
                    <a onclick="deleteOrganization({{id}}) "data-toggle="tooltip" data-placement="left" title="{{#translate}}Delete{{/translate}}"><span class="glyphicon glyphicon-remove"></span></a>
                    {{/status}}
                    {{/isAdmin}}
                    {{/orgUser}}
                </td>
            </tr>
            {{/distributors}}
        </tbody>
    </table>
</div>

{{/content}}

{{/layout}}
<script>
    function deleteOrganization(id) {

        message = "{{#translate}}Are you sure you want to delete this organization{{/translate}} ..?!";
        url = '/organizations/delete/' + id;
        bootbox.confirm(message, function (result) {
            if (result) {
                window.location.assign(url);
            }
        });
    }
</script>