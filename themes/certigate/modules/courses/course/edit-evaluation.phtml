{{% BLOCKS }}
{{<layout}}

{{$content}}

<ul class="nav nav-tabs" role="tablist">
    <li role="presentation"><a href="/courses/edit/{{courseId}}" aria-controls="courseDetails" >Course Details</a></li>
    <li role="presentation" class="active"><a href="#courseEvaluation" aria-controls="courseEvaluation" role="tab" data-toggle="tab">Course Evaluation</a></li>
    <li role="presentation"><a href="/courses/resources/edit/{{courseId}}" aria-controls="courseResources">Course Resources</a></li>
</ul>

<!-- Tab panes -->
<div class="tab-content">
    <div role="tabpanel" class="tab-pane" id="courseDetails">...</div>
    <div role="tabpanel" class="tab-pane active" id="courseEvaluation">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Edit Evaluation</h3>
            </div>
            <div class="panel-body">
                <ul>    
                    {{#validationError}}
                    <li class="error">{{.}}</li>
                    {{/validationError}}
                </ul>
                {{#noEvaluation}}
                <div class="alert alert-warning" role="alert">
                    Course has no evaluation yet
                </div>
                <a href="/courses/evaluation/new/{{courseId}}"><input type="button" id="addmore" class=" btn btn-primary" value="Create Course Evaluation"></a>

                {{/noEvaluation}}
                {{^noEvaluation}}

                <form id="editForm" class="form-horizontal" method="POST" action="">
                    <fieldset>
                        <br>
                        <!-- Form Name -->
                        {{#oldQuestions}}
                        <!-- Text input-->
                        <div class="form-group" >
                            <label class="col-md-4 control-label" for="editedQuestion[]">Question Title</label>  
                            <div class=" col-md-4">
                                <input name="editedQuestion[]" type="text" placeholder="Add Your Question Here" class="form-control editedInputs input-md" required=""value="{{questionTitle}}">
                                {{#isAdminUser}}<a href="#" class="deleteQuestion removeQ" >X</a>{{/isAdminUser}}
                                <input type="hidden" class="dummy" name="original[]" value="{{questionTitle}}"/>
                            </div>
                        </div>
                        {{/oldQuestions}}
                        {{#unvalidQuestions}}
                        <div class="form-group" >
                            <label class="col-md-4 error control-label" for="newQuestion[]">Question Title</label>  
                            <div class=" col-md-4">
                                <input name="newQuestion[]" type="text" placeholder="Add Your Question Here" class="form-control questionInputs input-md" required=""value="{{.}}">
                                {{#isAdminUser}}<a href="#" class="deleteInvalidQuestion removeQ" >X</a>{{/isAdminUser}}
                            </div>
                        </div>
                        {{/unvalidQuestions}}
                        <span id="endOfText"></span>
                        {{#isAdminUser}}
                        <div class=" row form-group">
                            <label class="text-right col-md-4" for="evaluation_form_status">Status</label>
                            <div class=" col-md-4"> 
                                <input type="checkbox" name="status" class="form-control" id="evaluation_form_status" {{#status}}checked="checked"{{/status}}>
                            </div>
                        </div>
                        {{/isAdminUser}}
                        <!-- button -->
                        <div class=" row form-group">
                            <div class="col-md-4">
                                <button type="button" id="addmore" class=" btn btn-primary">Add More</button>
                            </div>
                        </div>
                        <div class=" row form-group">
                            <div class="col-md-4">
                                <button id="singlebutton" name="submit" class="btn btn-success">{{^isAdminUser}}Submit for admin approval{{/isAdminUser}}{{#isAdminUser}}Submit Evaluation Template{{/isAdminUser}}</button>
                            </div>
                        </div>


                    </fieldset>
                </form>


                {{/noEvaluation}}
            </div>
        </div>
    </div>
    <div role="tabpanel" class="tab-pane" id="courseResources">...</div>
</div>

{{/content}}

{{/layout}}
<script>
    $(document).ready(function () {
        //
//    window.index = 1000;
        numerateLabels();

        $('#addmore').click(function () {
            getMeNewInput();
        });

        function getMeNewInput() {
            window.template = '<div class="form-group"> <label class="col-md-4 control-label" for="newQuestion[]">Question Title</label> <div class="col-md-4"> <input name="newQuestion[]" type="text" placeholder="Add Your Question Here" class="questionInputs form-control input-md" required=""> <a href="#" class="deleteQuestion removeQ">X</a></div> </div>';
            $('#endOfText').before(window.template);
            numerateLabels();
        }

        function numerateLabels() {
            window.index = 1
            $('.control-label').each(function () {
                if ($(this).parent().is(":visible")) {
                    $(this).text('Question Title ' + window.index)
                    window.index++;
                }
            });
        }

        /**
         * This action is meant to delete 
         */
        $('.deleteQuestion').click(function () {
            // remove questionInputs class and replace it with deletedQuestion class
            $(this).prev().attr("class", "deletedquestion form-control input-md");
            // change input name 
            $(this).prev().prop("name", 'deleted[]');
            // hide deleted input
            $(this).parent().parent().hide();
            //remove original value no longer needed
            $(this).next().remove();

            numerateLabels();
//        editInputNames();
        });
        $('.deleteInvalidQuestion').click(function () {
            //delete input
            $(this).parent().parent().remove();

            numerateLabels();
        });

        // to delete run time created questions  
        $(document).on("click", ".deleteQuestion", function () {
            $(this).parent().parent().remove();
            numerateLabels();
        });

    });

</script>
