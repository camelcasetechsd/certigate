{{% BLOCKS }}
{{<layout}}
{{$content}}
<div class="page-container-wide">

    <div class="image-course">
        <div class="container">
            <div class="row row-centered">
                <div class="col-xs-12 col-centered  text-center">
                    <h1 class="course-name">
                        {{#locale_en}}
                        {{course.name}}
                        {{/locale_en}}
                        {{#locale_ar}}
                        {{course.nameAr}}
                        {{/locale_ar}}
                    </h1>
                    <div class="inner-cont">
                        <span>{{course.duration}} {{#translate}}day{{/translate}}(s). </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <a class="pull-right col-md-3" href="/courses/calendar">{{#translate}}Back to Courses Calendar{{/translate}}</a>

    <!--making sure that user can evaluate-->
    {{#canEvaluate}}
    {{#courseEventId}}
    <!--this rule is only for students-->
    <a class="btn btn-info" href="/courses/vote/{{courseEventId}}" >{{#translate}}Evaluate Course{{/translate}}</a>
    <br><br>
    {{/courseEventId}}
    {{/canEvaluate}}
    <hr class="featurette-divider">
    <div class="tabs">
        <div class="container">
            <ul class="nav nav-tabs" role="tablist">
                <li role="presentation" class="active"><a href="#courseDetails" data-toggle="tab" aria-controls="courseDetails" role="tab" data-toggle="tab">{{#translate}}Course Details{{/translate}}</a></li>
                <li role="presentation"><a href="#courseEvents" data-toggle="tab" aria-controls="courseEvents">{{#translate}}Course Events{{/translate}}</a></li>
                <li role="presentation"><a href="#courseOutlines" data-toggle="tab" aria-controls="courseOutlines">{{#translate}}Course Outlines{{/translate}}</a></li>
                <li role="presentation"><a href="#courseResources" data-toggle="tab" aria-controls="courseResources">{{#translate}}Course Resources{{/translate}}</a></li>

            </ul>

            <!-- Tab panes -->
            <div class="tab-content">
                <div role="tabpanel" class="tab-pane fade in active" id="courseDetails">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>{{#translate}}Course Details{{/translate}}</h3>
                        </div>
                        <div class="panel-body">

                            {{#course}}
                            <table class="table">
                                <tbody>
                                    <tr>
                                        <td>{{#translate}}Name{{/translate}}</td>
                                        <td>
                                            {{#locale_en}}
                                            {{name}}
                                            {{/locale_en}}
                                            {{#locale_ar}}
                                            {{nameAr}}
                                            {{/locale_ar}}                                        </td>
                                    </tr><tr>
                                        <td>{{#translate}}Brief{{/translate}}</td>
                                        <td>
                                            {{#locale_en}}
                                            {{brief}}
                                            {{/locale_en}}
                                            {{#locale_ar}}
                                            {{briefAr}}
                                            {{/locale_ar}}                                        </td>
                                    </tr><tr>
                                        <td>{{#translate}}Time{{/translate}}</td>
                                        <td>
                                            {{time}}
                                        </td>
                                    </tr><tr>
                                        <td>{{#translate}}Duration{{/translate}}</td>
                                        <td>
                                            {{duration}} {{#translate}}Day(s){{/translate}}
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                            {{/course}}
                        </div>
                    </div>
                </div>
                <div role="tabpanel" class="tab-pane fade" id="courseEvents">
                    <div class="panel panel-default">
                        {{#courseEventCreator}}
                        <a class="btn btn-info" href="/course-events/new/{{course.id}}" >{{#translate}}Create new course event{{/translate}}</a>
                        {{/courseEventCreator}}
                        <div class="panel-heading">
                            <h3>{{#translate}}Course Events{{/translate}}</h3>
                        </div>
                        <div class="panel-body">


                            {{#course}}
                            {{#course.courseEvents.count}}
                            <table class="table">
                                <thead>

                                    {{#courseEvents.count}}
                                    <tr>
                                        <th>{{#translate}}Start Date{{/translate}}</th>
                                        <th>{{#translate}}End Date{{/translate}}</th>
                                        <th>{{#translate}}Instructor{{/translate}}</th>
                                        <th>{{#translate}}ATP Name{{/translate}}</th>
                                        <th>{{#translate}}ATP City{{/translate}}</th>
                                    </tr>
                                    {{/courseEvents.count}}
                                </thead>
                                <tbody>
                                    {{#courseEvents}}
                                    {{^hideFromCalendar}}
                                    {{^alreadyStarted}}
                                    <tr>
                                        <td>{{startDate}}</td>
                                        <td>{{endDate}}</td>
                                        <td>
                                            {{ai.firstName}} {{ai.lastName}}
                                        </td>
                                        <td>
                                            {{#locale_en}}
                                            {{atp.commercialName}}
                                            {{/locale_en}}
                                            {{#locale_ar}}
                                            {{atp.commercialNameAr}}
                                            {{/locale_ar}}
                                        </td>
                                        <td>
                                            {{#locale_en}}
                                            {{atp.city}}
                                            {{/locale_en}}
                                            {{#locale_ar}}
                                            {{atp.cityAr}}
                                            {{/locale_ar}}
                                        </td>
                                    </tr>
                                    {{/alreadyStarted}}
                                    {{/hideFromCalendar}}
                                    {{/courseEvents}} 
                                </tbody>
                            </table>
                            {{/course.courseEvents.count}}
                            {{^course.courseEvents.count}}
                            {{#translate}}Nothing Yet{{/translate}} !
                            {{/course.courseEvents.count}}
                            {{/course}}
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="courseOutlines">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>{{#translate}}Course Outlines{{/translate}}</h3>
                        </div>
                        <div class="panel-body">

                            {{#course}}
                            <table class="table">
                                <thead>
                                    {{#outlines.count}}
                                    <tr>
                                        <th>{{#translate}}Title{{/translate}}</th>
                                        <th>{{#translate}}Duration (minutes){{/translate}}</th>
                                    </tr>
                                    {{/outlines.count}}
                                </thead>
                                <tbody>
                                    {{#outlines}}
                                    {{#statusActive}}
                                    <tr>
                                        <td>
                                            {{#locale_en}}
                                            {{title}}
                                            {{/locale_en}}
                                            {{#locale_ar}}
                                            {{titleAr}}
                                            {{/locale_ar}}                                                          </td>
                                        <td>
                                            {{duration}}
                                        </td>
                                    </tr>
                                    {{/statusActive}}
                                    {{/outlines}} 
                                </tbody>
                            </table>
                            {{/course}}
                        </div>
                    </div>
                </div>

                <div role="tabpanel" class="tab-pane fade" id="courseResources">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3>{{#translate}}Course Resources{{/translate}}</h3>
                        </div>
                        <div class="panel-body">

                            {{#course}}
                            <table class="table">
                                <tbody>
                                    {{#canDownloadResources}}
                                    {{#resources}}
                                    <tr>
                                        <td>{{#translate}}{{type}}{{/translate}}</td>
                                        <td>
                                            {{#files}}
                                            <a target="_blank" href="/courses/resources/download/{{id}}" >{{name}}</a> <br>
                                            {{/files}}
                                        </td>
                                    </tr>
                                    {{/resources}} 
                                    {{/canDownloadResources}}
                                </tbody>
                            </table>
                            {{/course}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {{/content}}
    {{/layout}}
