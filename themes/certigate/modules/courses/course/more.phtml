{{% BLOCKS }}
{{<layout}}
{{$content}}

<div class="main-holder">
    <!-- image course
     ================================================== -->  
    <div class="image-course">
        <div class="container">
            <div class="row row-centered">
                <div class="col-xs-12 col-centered  text-center">

                    <h1 class="course-name">{{course.name}}<br>
                        {{course.brief}}</h1>
                    <div class="inner-cont">
                        <p style="color: #fff;">{{course.duration}} {{#translate}}Day{{/translate}}(s).</p>
                        <button class="btn-course-enroll"><a href="/courses/calendar">Enroll this course</a></button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- end image course
   ================================================== --> 

    <hr class="featurette-divider">

    <!-- tabs 
   ================================================== --> 

    <div class="tabs">
        <div class="container">
            <ul class="nav nav-tabs responsive" id="myTab">
                <li class="active"><a data-target="#about" data-toggle="tab">{{#translate}}About This Course{{/translate}}</a></li>
                <li><a data-target="#courseEvents" data-toggle="tab">{{#translate}}Course Events{{/translate}}</a></li>
                <li><a data-target="#courseOutlines" data-toggle="tab">{{#translate}}Course Outlines{{/translate}}</a></li>
                <li><a data-target="#courseResources" data-toggle="tab">{{#translate}}Course Resources{{/translate}}</a></li>
            </ul>

            <div class="tab-content responsive">
                <div class="tab-pane active" id="about">

                    <div class="row">
                        <div class="col-sm-8">
                            <p>
                                {{#locale_en}}
                                {{course.brief}}
                                {{/locale_en}}
                                {{#locale_ar}}
                                {{course.briefAr}}
                                {{/locale_ar}}
                            </p>
                            <div class="instructor-small">
                                <h3>{{#translate}}Instructors{{/translate}}</h3>
                                <div class="row">
                                    {{#instructors}}
                                    <div class=" col-sm-3">
                                        <a href="/users/more/{{id}}">
                                            <img src="{{photo}}?s=100"
                                                 width="100" height="100" alt="Author avatar" class="avatar img-circle">
                                            <div class="instrcutor-details">
                                                <p class="instrcutor-name">{{firstName}} {{lastName}}</p>
                                                <p class="author-description">{{#translate}}From{{/translate}} {{country}}</p>
                                            </div>
                                        </a>
                                    </div>
                                    {{/instructors}}
                                </div>
                            </div>
                        </div>
                        <div class="col-sm-1 "></div>
                        <div class="col-sm-3 course-date">
                            <div class="date">
                                <h3>{{#translate}}Course Dates{{/translate}}</h3>
                                {{#course}}
                                {{#courseEvents}}
                                <ul>
                                    {{^hideFromCalendar}}
                                    {{^alreadyStarted}}    
                                    <li>{{#translate}}Starts at{{/translate}} {{startDate}} - {{#translate}}ends at{{/translate}} {{endDate}}</li>
                                    {{/alreadyStarted}}
                                    {{/hideFromCalendar}}
                                </ul>
                                {{/courseEvents}}
                                {{/course}}
                            </div>
                            <div class="enroll">
                                <h3>{{#translate}}Enroll this course{{/translate}}</h3>
                                <button class="btn-blue-enroll"><a href="/courses/calendar" style="color: #fff">{{#translate}}Enroll this course{{/translate}}</a></button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="courseEvents">
                    <div class="row">
                        <div class="panel panel-default">
                            {{#courseEventCreator}}
                            <a class="btn btn-info" href="/course-events/new/{{course.id}}" >{{#translate}}Create new course event{{/translate}}</a>
                            {{/courseEventCreator}}
                            <div class="panel-heading">
                                <h3>{{#translate}}Course Events{{/translate}}</h3>
                            </div>
                            <div class="panel-body">
                                {{#course}}
                                {{#course.courseEvents.count}}
                                <table class="table">
                                    <thead>
                                        {{#courseEvents.count}}
                                        <tr>
                                            <th>{{#translate}}Start Date{{/translate}}</th>
                                            <th>{{#translate}}End Date{{/translate}}</th>
                                            <th>{{#translate}}Instructor{{/translate}}</th>
                                            <th>{{#translate}}ATP Name{{/translate}}</th>
                                            <th>{{#translate}}ATP City{{/translate}}</th>
                                        </tr>
                                        {{/courseEvents.count}}
                                    </thead>
                                    <tbody>
                                        {{#courseEvents}}
                                        {{^hideFromCalendar}}
                                        {{^alreadyStarted}}
                                        <tr>
                                            <td>{{startDate}}</td>
                                            <td>{{endDate}}</td>
                                            <td>{{ai.firstName}} {{ai.lastName}}</td>
                                            <td>{{atp.commercialName}}</td>
                                            <td>{{atp.city}}</td>
                                        </tr>
                                        {{/alreadyStarted}}
                                        {{/hideFromCalendar}}
                                        {{/courseEvents}} 
                                    </tbody>
                                </table>
                                {{/course.courseEvents.count}}
                                {{^course.courseEvents.count}}
                                Nothing Yet !
                                {{/course.courseEvents.count}}
                                {{/course}}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="courseOutlines">
                    <div class="row">
                        <div class="panel-body">

                            {{#course}}
                            <table class="table">
                                <thead>
                                    {{#outlines.count}}
                                    <tr>
                                        <th>{{#translate}}Title{{/translate}}</th>
                                        <th>{{#translate}}Title in Arabic{{/translate}}</th>
                                        <th>{{#translate}}Duration (minutes){{/translate}}</th>
                                    </tr>
                                    {{/outlines.count}}
                                </thead>
                                <tbody>
                                    {{#outlines}}
                                    {{#statusActive}}
                                    <tr>
                                        <td>{{title}}</td>
                                        <td>{{titleAr}}</td>
                                        <td>{{duration}}</td>
                                    </tr>
                                    {{/statusActive}}
                                    {{/outlines}} 
                                </tbody>
                            </table>
                            {{/course}}
                        </div>
                    </div>
                </div>
                <div class="tab-pane" id="courseResources">
                    {{#course}}
                    <table class="table">
                        <tbody>
                            {{#canDownloadResources}}
                            {{#resources}}
                            <tr>
                                <td>{{type}}</td>
                                <td>
                                    {{#files}}
                                    <a target="_blank" href="/courses/resources/download/{{id}}" >{{name}}</a> <br>
                                    {{/files}}
                                </td>
                            </tr>
                            {{/resources}} 
                            {{/canDownloadResources}}
                        </tbody>
                    </table>
                    {{/course}}
                </div>
            </div>
        </div>
    </div>
</div>
{{/content}}
{{/layout}}