{{% BLOCKS }}
{{<layout}}
{{$content}}

<style>
    .removeQ{
        margin-top: -27px;
        float: left;
        {{#locale_en}}
        margin-left: 527px;   
        {{/locale_en}}
        {{^locale_en}}
        margin-left: -60px;   
        {{/locale_en}}
    }
</style>

<ul>    
    {{#validationError}}
    <li class="error">{{.}}</li>
    {{/validationError}}
</ul>
<div class="container">
    <div class="page-container">
        <div class="row">

            <div class="col-md-12 col-md-offset-0">
                <div class="panel panel-default ">
                    <div class="panel-heading">
                        <h3>{{#translate}}NEW EVALUATION TEMPLATE{{/translate}}</h3>
                    </div>
                    <div class="panel-body main-form  ">
                        <form id="questions" class="form-horizontal" method="POST" action="">
                            <fieldset>
                                <div class="col-md-12">
                                    <div class="form-group" >
                                        <div class="questionContainer row">
                                            <label class="col-md-3 control-label englishLabel" for="newQuestion[]">{{#translate}}Question Title{{/translate}}</label>  
                                            <div class="col-md-8">
                                                <input name="newQuestion[]" type="text" placeholder="{{#translate}}Add Your Question Here{{/translate}}" class="form-control questionInputs input-md" required="">
                                            </div>
                                            <div class="col-md-1">
                                                <a href="javascript:void(0);" class="deleteQuestion" >X</a>
                                            </div>
                                        </div>
                                        <div class="questionContainer row">
                                            <label class="col-md-3 control-label" for="newQuestion[]">{{#translate}}Question Title in Arabic{{/translate}}</label>  
                                            <div class="col-md-8">
                                                <input name="newQuestionAr[]" type="text" placeholder="{{#translate}}Add Your Question Here{{/translate}}" class="form-control questionInputs input-md" required="">
                                            </div>
                                            <div class="col-md-1">
                                                <a href="javascript:void(0);" class="deleteQuestion" >X</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <span id="endOfText"></span>
                                <!-- button -->
                                <div class=" row form-group">
                                    <div class="col-md-4">
                                        <button id="singlebutton" name="submit" class="btn btn-success">{{#translate}}Save{{/translate}}</button>
                                    </div>
                                </div>

                            </fieldset>
                        </form>

                        <button type="button" id="addmore" class=" btn btn-primary">{{#translate}}Add More{{/translate}}</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{{/content}}

{{/layout}}
<script>
    $(document).ready(function () {
        window.index = 1;
        numerateLabels();

        $('#addmore').click(function () {
            getMeNewInput();
        });

        function getMeNewInput() {
            window.template = ' <div class="col-md-12"><div class="form-group" > <div class="questionContainer row"> <label class="col-md-3 control-label englishLabel" for="newQuestion[' + window.index + ']">{{#translate}}Question Title{{/translate}}</label> <div class="col-md-8"> <input name="newQuestion[' + window.index + ']" type="text" placeholder="{{#translate}}Add Your Question Here{{/translate}}" class="form-control questionInputs input-md" required=""> </div> <div class="col-md-1"> <a href="javascript:void(0);" class="deleteQuestion" >X</a> </div> </div> <div class="questionContainer row"> <label class="col-md-3 control-label" for="newQuestionAr[' + window.index + ']">{{#translate}}Question Title in Arabic{{/translate}}</label> <div class="col-md-8"> <input name="newQuestionAr[' + window.index + ']" type="text" placeholder="{{#translate}}Add Your Question Here{{/translate}}" class="form-control questionInputs input-md" required=""> </div> <div class="col-md-1"> <a href="javascript:void(0);" class="deleteQuestion" >X</a> </div> </div> </div></div>'
            $('#endOfText').before(window.template);
            numerateLabels();
        }

        function numerateLabels() {
            window.index = 1
            $('.englishLabel').each(function () {
                $(this).text('Question Title ' + window.index)
                window.index++;
            });
        }

        /**
         * This action is meant to delete 
         */
        $(document).on("click", ".deleteQuestion", function () {
            //         delete template 
            $(this).parent().parent().parent().remove();
            numerateLabels();
        });

    });

</script>
