{{% BLOCKS }}
{{<layout}}
{{$content}}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>{{#translate}}New Setting{{/translate}}</h3>
    </div>
    <div class="panel-body main-form  ">
        {{{openTag}}}
        <div class="row panel-border">
            <h2 class="sub-title-form">{{#translate}}SETTINGS DATA{{/translate}}</h2>
            <div class="col-md-6">
                <div class="form-group">
                    <label  class="col-sm-3 control-label required"  for="setting_form_name">{{#translate}}{{nameLabel}}{{/translate}}</label>
                    <div class="col-sm-9">
                        {{{name}}}
                        {{{nameError}}}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label  class="col-sm-3 control-label required"  for="setting_form_value">{{#translate}}{{valueLabel}}{{/translate}}</label>
                    <div class="col-sm-9">
                        {{{value}}}
                        {{{valueError}}}
                    </div>
                </div>
                <div class="form-group">
                    {{{id}}}
                    {{{idError}}}
                </div>
            </div>
            <input type="Submit" name="buttons[create]" class="pull-left btn-inline btn btn-success" value="Save">
            <input name="buttons[reset]" class="pull-left btn-inline btn btn-danger resetButton" type="button" value="Reset"></fieldset>
        </div>
        {{{closeTag}}}
    </div>
</div><!-- panel -->

{{/content}}
{{/layout}}
