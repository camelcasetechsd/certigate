{{% BLOCKS }}
{{<layout}}
{{$content}}


<div class="main-holder">
    <div class="container">
        <div class="page-container">
            <div class="row">
                <div class="panel panel-default ">
                    <div class="panel-heading">
                        <h3>{{#translate}}Edit Menu{{/translate}}</h3>
                    </div>
                    <div class="panel-body main-form  ">
                        {{{openTag}}}

                        <div class="row panel-border">
                            <h2 class="sub-title-form">{{#translate}}MENU DATA{{/translate}}</h2>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label  class="col-sm-3 control-label required"  for="menu_form_title">{{#translate}}{{titleLabel}}{{/translate}}</label>
                                    <div class="col-sm-9">
                                        {{{title}}}
                                        {{{titleError}}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label  class="col-sm-3 control-label required"  for="menu_form_titleAr">{{#translate}}{{titleArLabel}}{{/translate}}</label>
                                    <div class="col-sm-9">
                                        {{{titleAr}}}
                                        {{{titleArError}}}
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="col-md-6 c-input control-label statement" for="menu_form_status">
                                        {{{status}}}
                                        {{{statusError}}}
                                        <span class="c-indicator col-md-offset-7" ></span>
                                        {{statusLabel}}
                                    </label>
                                </div>
                            </div>
                            {{{id}}}
                            <div class="col-md-12">
                                <div class="form-group">
                                    <div class="col-sm-9">
                                        {{{buttons}}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{{closeTag}}}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{{/content}}
{{/layout}}
