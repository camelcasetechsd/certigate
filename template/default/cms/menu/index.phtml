{{% BLOCKS }}
{{<layout}}
{{$content}}
<a href="/cms/menu/new"class="btn btn-small btn-success create-new">Create new Menu</a>
<br><br>
<div class="panel panel-default">

    <div class="panel-heading">Menus</div>

    <!-- Table -->
    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Status</th>
                <th>Created</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            {{#menus}}
            <tr class="{{^status}}container-inactive{{/status}}">
                <td>{{title}}</td>
                <td>{{statusText}}</td>
                <td>{{created}}</td>
                <td>
                    <a href="/cms/menu/edit/{{id}}" data-toggle="tooltip" data-placement="left" title="Edit"><span class="glyphicon glyphicon-edit"></span></a>
                    {{#status}}
                        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                        <a href="/cms/menu/delete/{{id}}" class="delete_row" data-toggle="tooltip" data-placement="left" title="Delete"><span class="glyphicon glyphicon-remove"></span></a>
                    {{/status}}
                </td>
            </tr>
            {{/menus}}
            </td>
            </tr>
        </tbody>
    </table>
</div>
{{/content}}
{{/layout}}
