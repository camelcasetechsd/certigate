{
    "name": "web",
    "chef_type": "role",
    "json_class": "Chef::Role",
    "description": "",
    "default_attributes": {
        "site": {
            "name": "certigate",
            "environment": "vagrant",
            "host": "local-certigate.com",
            "public_path": "/var/www/html/public",
            "db": {
                "name": "certigate",
                "username": "root",
                "encoding": "utf8",
                "collation": "utf8_general_ci"
            }
        },
        "estore": {
            "name": "certigate_estore",
            "environment": "vagrant",
            "host": "estore.local-certigate.com",
            "public_path": "/var/www/html/eStore",
            "db": {
                "name": "certigate_estore",
                "username": "root",
                "encoding": "utf8",
                "collation": "utf8_general_ci"
            },
            "admin":{
                "username" : "admin",
                "password": "admin",
                "email": "admin@certigate-pro.com"
            }
        },
        "user": {
            "name": "vagrant"
        },
        "mysql": {
            "root_connection": {
                "host": "127.0.0.1",
                "username": "root",
                "password": "testpass",
                "port": 3306,
                "driver": "mysqli"
            }
        }
    },
    "run_list": [
        "recipe[apt]",
        "recipe[build-essential]",
        "recipe[openssl]",
        "recipe[apache2]",
        "recipe[php]",
        "recipe[apache2::mod_php5]",
        "recipe[apache2::mod_rewrite]",
        "recipe[nodejs]",
        "recipe[composer]",
        "recipe[memcached]",
        "recipe[git]",
        "recipe[certigate]"
    ]
}
