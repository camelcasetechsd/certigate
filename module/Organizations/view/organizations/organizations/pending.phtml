                </table>

            </div>
        </div>
    </div>

    <div role="tabpanel" class="tab-pane fade" id="organizationUsers">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Organization Users</h3>
            </div>
            <div class="panel-body">

                <table class="table diffTable">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Duration</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#outlines}}
                        <tr>
                            <td>
                                <div class="diffRow">
                                    <div class="hidden original">{{before.title}}</div>
                                    <div class="hidden changed">{{after.title}}</div>
                                    <div class="diff"></div>
                                </div>
                            </td>
                            <td> 
                                <div class="diffRow">
                                    <div class="hidden original">{{before.duration}}</div>
                                    <div class="hidden changed">{{after.duration}}</div>
                                    <div class="diff"></div>
                                </div>
                            </td>
                        </tr>
                        {{/outlines}}
                    </tbody>
                </table>

            </div>
        </div>
    </div>

    {{#isAdminUser}}
    <a href="/organizations/approve/{{id}}"><button class="btn btn-small btn-success">Approve all changes</button></a>
