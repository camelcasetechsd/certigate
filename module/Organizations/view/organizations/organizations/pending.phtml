    <div role="tabpanel" class="tab-pane fade in active" id="organizationDetails">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3>Organization Details</h3>
            </div>
            <div class="panel-body">

                <table class="table diffTable">
                    {{#organization}}
                    <tr class="diffRow">
                        <td >Name</td>
