{{% BLOCKS }}
{{<layout}}
{{$content}}
<a href="/courses/calendar"><button class="btn btn-small btn-success"><span class="glyphicon glyphicon-arrow-left"></span></button></a>
<br><br>
<div class="panel panel-default">

    <div class="panel-heading">Course Info</div>

    <!-- Table -->
    <table class="table">
        <tbody>
            {{#course}}
            <tr>
                <td>Name</td><td>{{name}}</td>
            </tr><tr>
                <td>Brief</td><td>{{brief}}</td>
            </tr><tr>
                <td>Authorized Instructor</td><td>{{ai.firstName}} {{ai.lastName}}</td>
            </tr><tr>
                <td>Start Date</td><td>{{startDate}}</td>
            </tr><tr>
                <td>End Date</td><td>{{endDate}}</td>
            </tr><tr>
                <td>Time</td><td>{{time}}</td>
            </tr><tr>
                <td>Duration</td><td>{{duration}} Day(s)</td>
            </tr><tr>
                <td>Authorized Training Partner</td><td>{{atp.commercialName}}</td>
            </tr>
                {{#canDownloadResources}}
                <tr>
                    <td>Presentations</td><td>
                        {{#presentations}}
                            <a target="_blank" href="/courses/download/presentations/{{id}}/{{name}}" >{{name}}</a> <br>
                        {{/presentations}}
                    </td>
                </tr><tr>
                    <td>Activities</td><td><a target="_blank" href="/courses/download/activities/{{id}}/{{activities.name}}" >{{activities.name}}</a></td>
                </tr><tr>
                    <td>Exams</td><td><a target="_blank" href="/courses/download/exams/{{id}}/{{exams.name}}" >{{exams.name}}</a></td>
                </tr>
                {{/canDownloadResources}}
            {{/course}}
        </tbody>
    </table>
</div>
{{/content}}
{{/layout}}
